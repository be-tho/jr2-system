{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:prod": "NODE_ENV=production vite build --config vite.config.prod.js",
        "build:analyze": "NODE_ENV=production vite build --config vite.config.prod.js --mode analyze",
        "watch": "vite --watch",
        "preview": "vite preview",
        "lint:css": "stylelint 'resources/**/*.css'",
        "format:css": "prettier --write 'resources/**/*.css'",
        "purge": "tailwindcss --purge --output ./public/css/tailwind-purged.css",
        "test:css": "npm run lint:css && npm run format:css"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "axios": "^1.6.4",
        "cssnano": "^6.0.5",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.39",
        "prettier": "^3.2.5",
        "stylelint": "^16.2.1",
        "stylelint-config-standard": "^36.0.0",
        "tailwindcss": "^3.4.4",
        "vite": "^6.3.5"
    },
    "dependencies": {
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16"
    }
}
